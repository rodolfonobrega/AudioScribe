# Environment Variables Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# API Keys (Required)
# ============================================================================

# Groq API Key - Get yours at https://console.groq.com/
GROQ_API_KEY=your-groq-api-key-here

# Optional: Alternative API Keys
# OPENAI_API_KEY=your-openai-api-key-here
# ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ============================================================================
# Transcription Configuration
# ============================================================================

# Both transcription and LLM use litellm as the unified provider
# The provider (groq, openai, etc.) is specified in the model name
# Examples: groq/whisper-large-v3, openai/whisper-1, azure/whisper

# Transcription model
TRANSCRIPTION_MODEL=groq/whisper-large-v3

# Language (auto-detect by default)
# Options: en, pt, es, fr, de, it, ja, ko, zh, etc.
TRANSCRIPTION_LANGUAGE=auto

# ============================================================================
# LLM Configuration
# ============================================================================

# LLM uses litellm as the unified provider
# The provider (groq, openai, anthropic, etc.) is specified in the model name
# Examples: groq/meta-llama/llama-guard-4-12b, openai/gpt-4, anthropic/claude-3-opus

# LLM model for post-processing
LLM_MODEL=groq/meta-llama/llama-guard-4-12b

# LLM parameters
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000

# ============================================================================
# Audio Configuration
# ============================================================================

# Audio settings
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_CHUNK_SIZE=1024

# ============================================================================
# Output Configuration
# ============================================================================

# Output handlers (comma-separated)
# Options: stdout, clipboard, file, autoit, applescript, xdotool
OUTPUT_HANDLERS=stdout,clipboard

# Output file path (for file handler)
OUTPUT_FILE_PATH=transcripts.txt

# ============================================================================
# Keyboard Configuration
# ============================================================================

# Hotkey combination
# Examples: f9, ctrl+space, ctrl+shift+t, alt+f9
HOTKEY=f9

# Interaction mode
# Options: push_to_talk, toggle
INTERACTION_MODE=push_to_talk

# ============================================================================
# Orchestrator Configuration
# ============================================================================

# Logging
LOG_LEVEL=INFO
VERBOSE=true
DEBUG=false
